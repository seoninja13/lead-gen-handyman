{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "../build",
    "rootDir": ".."
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
